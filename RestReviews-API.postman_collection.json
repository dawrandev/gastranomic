{
  "info": {
    "name": "RestReviews Mobile API",
    "description": "API collection for RestReviews mobile app authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "phone",
      "value": "998901234567",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Send Verification Code",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save code if in test mode",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.code) {",
                  "        pm.environment.set('verification_code', jsonData.code);",
                  "        console.log('Verification code saved:', jsonData.code);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{phone}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/send-code",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "send-code"]
            },
            "description": "Telefon raqamiga tasdiqlash kodini yuboradi. Test rejimida kod response da qaytadi."
          },
          "response": []
        },
        {
          "name": "2. Verify Code (Existing User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save token after successful verification",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.token) {",
                  "        pm.collectionVariables.set('token', jsonData.token);",
                  "        console.log('Token saved:', jsonData.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{phone}}\",\n  \"code\": \"{{verification_code}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-code",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-code"]
            },
            "description": "Mavjud foydalanuvchi uchun kodni tekshiradi va login qiladi."
          },
          "response": []
        },
        {
          "name": "2. Verify Code (New User - Register)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save token after successful registration",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.token) {",
                  "        pm.collectionVariables.set('token', jsonData.token);",
                  "        console.log('Token saved:', jsonData.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{phone}}\",\n  \"code\": \"{{verification_code}}\",\n  \"first_name\": \"Abdulla\",\n  \"last_name\": \"Valiyev\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-code",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-code"]
            },
            "description": "Yangi foydalanuvchi uchun ro'yxatdan o'tish (ism va familiya bilan)."
          },
          "response": []
        },
        {
          "name": "3. Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            },
            "description": "Autentifikatsiya qilingan foydalanuvchining profilini oladi."
          },
          "response": []
        },
        {
          "name": "4. Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Clear token after logout",
                  "if (pm.response.code === 200) {",
                  "    pm.collectionVariables.set('token', '');",
                  "    console.log('Token cleared');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Joriy tokenni bekor qiladi va tizimdan chiqaradi."
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints: send code, verify, profile, logout"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  }
}
